/*2016-12-13上传图片*/
.upload_img_box{
    position: relative;
    width:45%;
    height:100px;
    float: left;
    margin-bottom: 10px;
    margin-right: 5%;
}
.upload_img_box img{
    width:100%;
    height:100%;
}
.upload_btn{
    width:27%;
    height:25px;
    cursor: pointer;
}
.upload_care{
    color: red;
    font-size: 12px;
}
#preview-up-img{
    position: absolute;
    width:120%;
    left:-23%;
}
.upload_del{
    position: absolute;
    right: -8px;
    top: -8px;
    width: 16px;
    height: 16px;
    padding: 0;
    border: none;
    border-radius: 16px;
    background: url("../images/error_icon.png") no-repeat;
    background-size: 100% 100%;
}